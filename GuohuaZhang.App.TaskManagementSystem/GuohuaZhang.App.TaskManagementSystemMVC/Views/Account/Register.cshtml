@model ApplicationCore.Models.UserRegisterRequestModel

@{
    ViewData["Title"] = "Register";
}

<h3> Register </h3>

<div class="row">

    <div class="col-md-4">
        <form asp-action="Register" id="registerForm">

            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="Email" class="control-label">Email address</label>
                <input asp-for="Email" class="form-control" name="Email">
                <span asp-validation-for="Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Password" class="control-label">Password</label>
                <input asp-for="Password" class="form-control" name="Password">
                <span asp-validation-for="Password" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Fullname" class="control-label">FullName</label>
                <input asp-for="Fullname" class="form-control" name="Fullname">
                <span asp-validation-for="Fullname" class="text-danger"></span>
            </div>

            <div class="form-group">
                <label asp-for="Mobileno" class="control-label">Mobile Number</label>
                <input asp-for="Mobileno" class="form-control" name="Mobileno">
                <span asp-validation-for="Mobileno" class="text-danger"></span>
            </div>
            <button type="submit" class="btn btn-primary">Register</button>
        </form>

    </div>
</div>


@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }

}



